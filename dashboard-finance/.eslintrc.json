{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react"],
    "rules": {
        "react/react-in-jsx-scope": "off" // Turn off if using React 17+ without import React in every file
    },
    "settings": {
        "react": {
            "version": "detect" // Automatically detect React version
        }
    }
}
